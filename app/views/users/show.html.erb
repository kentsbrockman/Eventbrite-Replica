<div class="container text-center">


  <p>Your first name : <%= @user.first_name ? @user.first_name : "Not mentioned" %></p>
  <p>Your last name : <%= @user.last_name ? @user.last_name : "Not mentioned" %></p>
  <p>Your description : <%= @user.description ? @user.description : "Not mentioned" %></p>
  <p>Your email : <%= @user.email ? @user.email : "Not mentioned" %></p>

  <% if @events.length > 0 %>

    <h2 class="h3 mb-3 font-weight-normal text-center">All events</h2>
    
    <div class="row justify-content-center">
      <% @events.each do |event| %>
        <div class="card border-light m-3 rounded custom-card" style="max-width: 20rem;"> 
          <img class="rounded-top" src="https://picsum.photos/id/<%= event.id %>/300/200"/>
          <div class="card-body">
            <h4 class="card-title"><%= event.title %></h4>
            <h5 class="text-muted"><%= event.start_date %></h5>
            <p class="card-text"><%= event.description%></p>              <p class="text-center m-3"><%= link_to "See this event >", event_path(event.id) %></p>
          </div>
        </div>
      <% end %>
    </div>
    
  <% else %> 
    <p class="text-center m-3">No events</p>
  <% end %>
  
  <p class="text-center m-3"><%= link_to "Edit your email >", edit_user_registration_path(@user) %></p>
  <p class="text-center m-3"><%= link_to "Edit your profile >", edit_user_path(@user) %></p>

</div>
