
<div class="container">

  <div class="mt-3">
    <h1 class="text-center m-3">Title of this event : <%= @event.title %></h1>
    <p>Description: <%= @event.description %></p>
    <p>Creator: <%= @event.admin.email %></p>
    <p>Date: <%= @event.clean_start_date %></p>
    <p>From <%= @event.clean_start_hour %> to <%= @event.clean_end_hour %></p>
    <p>Duration: <%= @event.duration %> minutes</p>
    <p>Where? <%= @event.location %></p>
    <p>Price: <%= @event.price %> â‚¬</p>
  </div>

  <% if @event.is_admin?(current_user) %>
    <%= link_to "Event info", event_attendances_path(@event.id) , class: "btn btn-primary"%>  
  <% elsif @event.already_registered?(current_user) %>
    <%= link_to "Already registered!", new_event_attendance_path(@event.id) , class: "btn btn-primary"%>
  <% else %>
    <%= link_to "Register for this event", new_event_attendance_path(@event.id) , class: "btn btn-primary"%>
  <% end %>

</div>
